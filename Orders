select * from TBLORDERS where CUSTOMERID = 'MAGAA';

select CUSTOMERID, COMPANYNAME, CONTACTNAME, CONTACTTITLE from TBLCUSTOMERS where CONTACTTITLE <> 'Sales Associate';


SELECT C.CUSTOMERID, C.COMPANYNAME, P.PRODUCTID, P.PRODUCTNAME, P.ENGLISHNAME FROM TBLCUSTOMERS AS C, TBLPRODUCTS AS P WHERE C.CUSTOMERID IN

(SELECT O.CUSTOMERID FROM TBLORDERS AS O WHERE O.ORDERID IN

(SELECT OD.ORDERID FROM TBLORDERDETAILS AS OD WHERE OD.PRODUCTID IN

(SELECT P.PRODUCTID FROM TBLPRODUCTS AS P

WHERE P.ENGLISHNAME LIKE '%Chocolate%')))

AND P.ENGLISHNAME LIKE '%Chocolate%';


SELECT C.CUSTOMERID, C.COMPANYNAME, O.SHIPCOUNTRY, P.PRODUCTID, P.PRODUCTNAME, P.ENGLISHNAME FROM

TBLCUSTOMERS AS C, TBLORDERS AS O, TBLPRODUCTS AS P

 

WHERE C.CUSTOMERID IN

(SELECT O.CUSTOMERID FROM TBLORDERS AS O WHERE O.SHIPCOUNTRY = 'Italy' OR O.SHIPCOUNTRY = 'USA')

 

AND

 

O.SHIPCOUNTRY IN

(SELECT O.SHIPCOUNTRY FROM TBLORDERS AS O WHERE O.SHIPCOUNTRY = 'Italy' OR O.SHIPCOUNTRY = 'USA')

 

AND

 

P.PRODUCTID IN

(SELECT P.PRODUCTID FROM TBLPRODUCTS AS P WHERE P.PRODUCTID IN

(SELECT OD.PRODUCTID FROM TBLORDERDETAILS AS OD WHERE OD.ORDERID IN

(SELECT O.ORDERID FROM TBLORDERS AS O WHERE O.SHIPCOUNTRY = 'Italy' OR O.SHIPCOUNTRY = 'USA')));


SELECT OD.ORDERID, OD.PRODUCTID, P.PRODUCTNAME, OD.UNITPRICE, OD.QUANTITY, OD.DISCOUNT, (OD.UNITPRICE * OD.QUANTITY - ((OD.UNITPRICE * OD.QUANTITY) * OD.DISCOUNT)) TOTALPRICE FROM

TBLORDERDETAILS AS OD, TBLPRODUCTS AS P

WHERE P.PRODUCTNAME IN

(SELECT P.PRODUCTNAME FROM TBLPRODUCTS AS P

WHERE P.PRODUCTID = OD.PRODUCTID);


SELECT (CATEGORYID) CATEGORYNAME, (COUNT(CATEGORYID)) TOTALPRODUCTS FROM TBLPRODUCTS GROUP BY CATEGORYID ORDER BY TOTALPRODUCTS;


SELECT COUNTRY, CITY, (COUNT(CUSTOMERID)) TOTALCUSTOMERS FROM TBLCUSTOMERS GROUP BY COUNTRY, CITY;


SELECT ORDERID, ORDERDATE, REQUIREDDATE, SHIPPEDDATE FROM TBLORDERS

WHERE (SHIPPEDDATE > REQUIREDDATE);


